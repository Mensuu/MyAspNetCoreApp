<div>Günün Tarihi : @DateTime.Now.ToShortDateString()</div>

@{
    var datetime = DateTime.Now.ToShortDateString();
    var massage = "Merhaba";

    @: Bugünün Tarihi : @datetime

    <div>Mesaj : @massage</div>
    <text>Bugünün Tarihi : @datetime</text>

}

@if (1 == 1)
{
    <p>Doğru</p>
}
else if (DateTime.IsLeapYear(DateTime.Now.Year)) //Artık yıl için kullanılır.
{
    <p>Doğru</p>
}
else
{
    <h1>@alert</h1>
    <p>Yanlış</p>
}

@for (var i = 0 ; i < 10 ; i++) //0'dan 10'a (10 dahil değil) kadar sayıları listeler.
{
    <p>@i</p>
}

@foreach (var item in Enumerable.Range(1,10).ToList()) //1'den 10'a kadar (10 dahil) olan verileri listeleyecektir.
{
    <p>@item</p>
}